@page
@model Abbyweb.Pages.Categories.EditModel

<form method="post" >
    <div class="border p-3 mt-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="Category.Id" />
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name" class="text-white"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" class="text-white"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
             <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mx-4" style="width: 150px;">Edit</button>
          <a asp-page="Index"  class="btn btn-secondary" style="width: 150px;">Go Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}